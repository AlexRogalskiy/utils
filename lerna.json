{
    "packages": ["packages/*"],
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "version": {
            "message": "chore(*): publish",
            "ignoreChanges": [
                "*.stories.*",
                "**/__snapshots__/**",
                "*.test.*",
                "**/*.md"
            ]
        }
    }
}
